generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String?  @unique
  phone       String?  @unique
  password    String
  contactInfo String?
  bio         String?
  profile     String?
  createdAt   DateTime @default(now()) @db.Timestamp(0)
  // relation
  study       Study[]
  review      Review[]
  lesson      Lesson[]
}

model Review {
  id      Int      @id @default(autoincrement())
  message String
  // relation
  lesson  Lesson[]
  User    User?    @relation(fields: [userId], references: [id])
  userId  Int?
}

model Lesson {
  id         Int      @id @default(autoincrement())
  comment    String
  rating     Int?
  video      String?
  sheet      String?
  categoryId Category @default(NONE)
  // relation
  createdAt  DateTime @default(now())
  User       User?    @relation(fields: [userId], references: [id])
  userId     Int?
  Review     Review?  @relation(fields: [reviewId], references: [id])
  reviewId   Int?
  study      Study[]
}

enum Category {
  NONE
  MATH
  SCI
}

model Study {
  id       Int     @id @default(autoincrement())
  // relation
  User     User?   @relation(fields: [userId], references: [id])
  userId   Int?
  Lesson   Lesson? @relation(fields: [lessonId], references: [id])
  lessonId Int?
}
